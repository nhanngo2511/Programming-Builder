@using PagedList;
@using PagedList.Mvc;

@model IPagedList<ProgramBuilder.DA.Subject>

@{
    ViewBag.Title = "Danh sách môn học";
    ViewBag.Header = "Danh sách môn học";
}

<style>
    .table-condensed {
        font-size: 14.5px;
    }
</style>

<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-10">
            @using (Html.BeginForm())
            {
                @Html.Label("Chọn khoa", new { @class = "control-label" })
                @Html.DropDownList("FacultyID", (SelectList)ViewBag.Faculties,"--- Tất cả ---", new { @class = "modify form-control", onchange = "this.form.submit()" })
            }
            <br />
            <br />
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th><span style="font-size:15px"><strong>Mã học phần</strong></span></th>
                                    <th><span style="font-size:15px"><strong>Tên môn học</strong></span></th>
                                    <th class="text-center" width="100px"><span><strong>Số tín chỉ</strong></span></th>
                                    <th class="text-center"><span><strong>Số lượng GV dạy</strong></span></th>
                                    <th><span><strong>GV chính đảm nhận</strong></span></th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td><a href="/Subject/SubjectDetail/@Model[i].ID">@Model[i].PartialCode</a></td>
                                            <td>@Model[i].Name</td>
                                            <td class="text-center">@Model[i].CreditNumber</td>
                                            <td class="text-center">@Model[i].SubjectsAccounts.ToList().Count</td>

                                            @if ((User as ProgramBuilder.WEB.Principal.AuthorizePrincipal).IsInRole("Admin"))
                                            {
                                                 <td><a href="/Account/AccountDetail/@Model[i].SubjectsAccounts.Where(x =>x.IsSyllabusEditor == true).First().Account.ID">@Model[i].SubjectsAccounts.Where(x => x.IsSyllabusEditor == true).First().Account.FullName</a></td>
                                            }
                                            else
                                            {
                                                 <td>@Model[i].SubjectsAccounts.Where(x => x.IsSyllabusEditor == true).First().Account.FullName</td>
                                            }


                                           
                                            <td width="140px">
                                              <a href="/Subject/SubjectDetail/@Model[i].ID" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-eye-open"></span> Xem</a>
                                              @if ((User as ProgramBuilder.WEB.Principal.AuthorizePrincipal).IsInRole("Editor"))
                                              {
                                                   <a href="/Subject/EditSubject/@Model[i].ID" class="btn btn-xs btn-info"><span class="glyphicon glyphicon-edit"></span> Sửa</a>
                                              }
                                               
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.PagedListPager(Model, page => Url.Action("SubjectsList", new { FacultyID = Request.Params["FacultyID"], page }))
</div>

